<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ethan.worldwide.account.admin.infra.dao.AdminRoleMapper">
    <select id="listByUserId" resultType="com.ethan.worldwide.account.admin.domain.bo.role.SystemRoleBo">
        select
            r.*
        from
            admin_role r
                right join admin_user_role_rel ur
                           on r.id = ur.role_id and ur.user_id = #{userId}
    </select>
</mapper>